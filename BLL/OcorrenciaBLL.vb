Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class OcorrenciaBLLPublic Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oOcorrencia As DTO.Cg_ocorrencia)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_OCORRENCIA",DbType.Int32,oOcorrencia.Id_ocorrencia))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_OCORRENCIA",DbType.Datetime,oOcorrencia.Data_ocorrencia))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DESCRICAO",DbType.String,oOcorrencia.Descricao))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_EQUIPAMENTO",DbType.Int32,oOcorrencia.Id_equipamento))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@SERIE",DbType.String,oOcorrencia.Serie))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_LOJA",DbType.Int32,oOcorrencia.Id_loja))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@HISTORICO",DbType.String,oOcorrencia.Historico))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_INS",DbType.Int32,oOcorrencia.User_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_INS",DbType.Datetime,oOcorrencia.Data_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_UPD",DbType.Int32,oOcorrencia.User_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_UPD",DbType.Datetime,oOcorrencia.Data_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@OS_VINCULADA", DbType.String, oOcorrencia.OS_Vinculada))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_ocorrencia"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_ocorrencia"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_OCORRENCIA",DbType.Int32,_KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_ocorrencia"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_ocorrencia        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_ocorrencia        If dr.HasRows Then            dr.Read()        oModelo.Id_ocorrencia = CInt(dr.Item("Id_ocorrencia"))        oModelo.Data_ocorrencia = CDate(dr.Item("Data_ocorrencia"))        oModelo.Descricao = dr.Item("Descricao")        oModelo.Id_equipamento = CInt(dr.Item("Id_equipamento"))        oModelo.Serie = dr.Item("Serie")        oModelo.Id_loja = CInt(dr.Item("Id_loja"))        oModelo.Historico = dr.Item("Historico")        oModelo.User_ins = CInt(dr.Item("User_ins"))        oModelo.Data_ins = CDate(dr.Item("Data_ins"))        oModelo.User_upd = CInt(dr.Item("User_upd"))        oModelo.Data_upd = CDate(dr.Item("Data_upd"))        Else        oModelo.Id_ocorrencia = -1        End If        Return oModelo    End FunctionEnd Class