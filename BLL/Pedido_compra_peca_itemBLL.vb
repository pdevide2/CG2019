Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class Pedido_compra_peca_itemBLLPublic Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oPedido_compra_peca_item As DTO.Cg_pedido_compra_peca_item)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_PEDIDO",DbType.Int32,oPedido_compra_peca_item.Id_pedido))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_PECA",DbType.Int32,oPedido_compra_peca_item.Id_peca))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@QTDE",DbType.Int32,oPedido_compra_peca_item.Qtde))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@VALOR_UNIT",DbType.Decimal,oPedido_compra_peca_item.Valor_unit))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@VALOR_TOTAL",DbType.Decimal,oPedido_compra_peca_item.Valor_total))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@RECEBIDO",DbType.Boolean,oPedido_compra_peca_item.Recebido))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_RECEBIMENTO",DbType.Datetime,oPedido_compra_peca_item.Data_recebimento))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_pedido_compra_peca_item"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_pedido_compra_peca_item"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_PEDIDO",DbType.Int32,_KeyId))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_PECA",DbType.Int32,_KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_pedido_compra_peca_item"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_pedido_compra_peca_item        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_pedido_compra_peca_item        If dr.HasRows Then            dr.Read()        oModelo.Id_pedido = CInt(dr.Item("Id_pedido"))        oModelo.Id_peca = CInt(dr.Item("Id_peca"))        oModelo.Qtde = CInt(dr.Item("Qtde"))        oModelo.Valor_unit = CDec(dr.Item("Valor_unit"))        oModelo.Valor_total = CDec(dr.Item("Valor_total"))        oModelo.Recebido = CBool(dr.Item("Recebido"))        oModelo.Data_recebimento = CDate(dr.Item("Data_recebimento"))        Else        oModelo.Id_pedido = -1        oModelo.Id_peca = -1        End If        Return oModelo    End FunctionEnd Class