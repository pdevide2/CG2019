Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class Tabelas_pesquisa_dinamicaBLLPublic Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oTabelas_pesquisa_dinamica As DTO.Cg_tabelas_pesquisa_dinamica)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_TABELA",DbType.Int32,oTabelas_pesquisa_dinamica.Id_tabela))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@TABELA",DbType.String,oTabelas_pesquisa_dinamica.Tabela))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@TIPO_TABELA",DbType.String,oTabelas_pesquisa_dinamica.Tipo_tabela))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@FILTRA_POR_EMPRESA", DbType.Boolean, oTabelas_pesquisa_dinamica.Filtra_por_empresa))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_tabelas_pesquisa_dinamica"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_tabelas_pesquisa_dinamica"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_TABELA",DbType.Int32,_KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_tabelas_pesquisa_dinamica"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_tabelas_pesquisa_dinamica        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_tabelas_pesquisa_dinamica        If dr.HasRows Then            dr.Read()        oModelo.Id_tabela = CInt(dr.Item("Id_tabela"))        oModelo.Tabela = dr.Item("Tabela")        oModelo.Tipo_tabela = dr.Item("Tipo_tabela")        Else        oModelo.Id_tabela = -1        End If        Return oModelo    End FunctionEnd Class