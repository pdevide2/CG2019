'********************************************************'* ResponsavelBLL'* Classe BLL do cadastro de Responsáveis pelos romaneios'* PAULO EDUARDO DEVIDE'* 30-JUL-2016'*'* Métodos:'* GravarBLL()'* ExcluirBLL()'* PesquisaPorIdModelBLL()'*' ********************************************************Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class ResponsavelBLL    Public Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oResponsavel As DTO.Cg_responsavel)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_RESPONSAVEL", DbType.Int32, oResponsavel.Id_responsavel))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@NOME", DbType.String, oResponsavel.Nome))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@APELIDO", DbType.String, oResponsavel.Apelido))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@EMAIL", DbType.String, oResponsavel.Email))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@CELULAR", DbType.String, oResponsavel.Celular))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@WHATSAPP", DbType.String, oResponsavel.Whatsapp))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_CARGO", DbType.Int32, oResponsavel.Id_cargo))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_INS", DbType.Int32, oResponsavel.User_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_INS", DbType.DateTime, oResponsavel.Data_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_UPD", DbType.Int32, oResponsavel.User_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_UPD", DbType.DateTime, oResponsavel.Data_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_EMPRESA", DbType.Int32, oResponsavel.Id_empresa))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_responsavel"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_responsavel"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_RESPONSAVEL", DbType.Int32, _KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_responsavel"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_responsavel        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_responsavel        If dr.HasRows Then            dr.Read()            oModelo.Id_responsavel = CInt(dr.Item("Id_responsavel"))            oModelo.Nome = dr.Item("Nome")            oModelo.Apelido = dr.Item("Apelido")            oModelo.Email = dr.Item("Email")            oModelo.Celular = dr.Item("Celular")            oModelo.Whatsapp = dr.Item("Whatsapp")            oModelo.Id_cargo = CInt(dr.Item("Id_cargo"))            oModelo.User_ins = CInt(dr.Item("User_ins"))            oModelo.Data_ins = CDate(dr.Item("Data_ins"))            oModelo.User_upd = CInt(dr.Item("User_upd"))            oModelo.Data_upd = CDate(dr.Item("Data_upd"))        Else            oModelo.Id_responsavel = -1        End If        Return oModelo    End FunctionEnd Class