Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class MarcaBLLPublic Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oMarca As DTO.Cg_marca)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_MARCA",DbType.Int32,oMarca.Id_marca))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DESC_MARCA",DbType.String,oMarca.Desc_marca))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_INS",DbType.Int32,oMarca.User_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_INS",DbType.Datetime,oMarca.Data_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_UPD",DbType.Int32,oMarca.User_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_UPD",DbType.Datetime,oMarca.Data_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_EMPRESA", DbType.Int32, oMarca.Id_empresa))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_marca"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_marca"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_MARCA",DbType.Int32,_KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_marca"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_marca        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_marca        If dr.HasRows Then            dr.Read()        oModelo.Id_marca = CInt(dr.Item("Id_marca"))        oModelo.Desc_marca = dr.Item("Desc_marca")        oModelo.User_ins = CInt(dr.Item("User_ins"))        oModelo.Data_ins = CDate(dr.Item("Data_ins"))        oModelo.User_upd = CInt(dr.Item("User_upd"))        oModelo.Data_upd = CDate(dr.Item("Data_upd"))        Else        oModelo.Id_marca = -1        End If        Return oModelo    End FunctionEnd Class