o.Data_ins))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@USER_UPD", DbType.Int32, oEquipamento.User_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_UPD", DbType.DateTime, oEquipamento.Data_upd))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@NF_ENTRADA", DbType.String, oEquipamento.NF_Entrada))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DATA_NF", DbType.DateTime, oEquipamento.Data_NF))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@PRAZO_GARANTIA", DbType.Int32, oEquipamento.Prazo_garantia))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_EMPRESA", DbType.Int32, oEquipamento.Id_empresa))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@PRECO_VENDA", DbType.Decimal, oEquipamento.PrecoVenda))

