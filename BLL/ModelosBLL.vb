Imports System.DataImports System.Collections.GenericImports DALImports System.Data.CommonImports System.Data.SqlClientPublic Class ModelosBLL    Public Enum flagOp        Limpar = 0        Novo = 1        Alterar = 2        Excluir = 3        Consulta = 4        Leitura = 5    End Enum    Public Sub GravarBLL(ByVal acao As Integer, ByVal oModelos As DTO.Cg_modelos)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_MODELO", DbType.Int32, oModelos.Id_modelo))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@DESC_MODELO", DbType.String, oModelos.Desc_modelo))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@OBS", DbType.String, oModelos.Obs))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@CAMINHO_ARQUIVO", DbType.String, oModelos.Caminho_arquivo))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@EXTENSAO_ARQUIVO", DbType.String, oModelos.Extensao_arquivo))        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_EMPRESA", DbType.Int32, oModelos.Id_empresa))        Try            Dim cmd As String            cmd = Nothing            If acao = flagOp.Alterar Then                cmd = "spUpd_Cg_modelos"            ElseIf acao = flagOp.Novo Then                cmd = "spIns_Cg_modelos"            End If            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Sub ExcluirBLL(_KeyId As Integer)        Dim listaParametros As New List(Of DbParameter)        listaParametros.Add(DAL.DALGenerico.CriarParametro("@ID_MODELO", DbType.Int32, _KeyId))        Try            Dim cmd As String            cmd = Nothing            cmd = "spDel_Cg_modelos"            DAL.DALGenerico.ExecutarComando("SQLServer", cmd, CommandType.StoredProcedure, listaParametros, DAL.DALGenerico.TipoDeComando.ExecuteNonQuery)        Catch ex As Exception            Throw ex        End Try    End Sub    Public Function PesquisaPorIdModelBLL(ByVal KeyId As Integer, ByVal strTabela As String, colunaId As String) As DTO.Cg_modelos        Dim sql = "SELECT * FROM " & strTabela & " WHERE " & colunaId & " = " & KeyId.ToString        Dim dr As SqlDataReader        dr = DAL.DALGenerico.ExecutarComando("SQLServer", sql, CommandType.Text, Nothing, DALGenerico.TipoDeComando.ExecuteReader)        Dim oModelo As New DTO.Cg_modelos        If dr.HasRows Then            dr.Read()            oModelo.Id_modelo = CInt(dr.Item("Id_modelo"))            oModelo.Desc_modelo = dr.Item("Desc_modelo")            oModelo.Obs = dr.Item("Obs")            oModelo.Caminho_arquivo = dr.Item("Caminho_arquivo")            oModelo.Extensao_arquivo = dr.Item("Extensao_arquivo")        Else            oModelo.Id_modelo = -1        End If        Return oModelo    End FunctionEnd Class